<?xml version="1.0"?>
<Container version="2">
  <Name>sw-website</Name>
  <Repository>hintab/sw-website</Repository>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>9211</HostPort>
        <ContainerPort>9211</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Database>
    <Name>MariaDB</Name>
    <Image>mariadb</Image>
    <Networking>
      <Mode>bridge</Mode>
      <Publish>
        <HostPort>3306</HostPort>
        <ContainerPort>3306</ContainerPort>
      </Publish>
    </Networking>
    <Environment>
      <Variable>
        <Name>MYSQL_ROOT_PASSWORD</Name>
        <Value/>
      </Variable>
    </Environment>
  </Database>
  <ExtraParams></ExtraParams>
  <Config Name="Port" Target="9211" Default="9211" Description="The port on which the website should run." Type="Port" Display="always" Required="true" Mask="false"/>
  <Config Name="DB_PASS" Target="MYSQL_ROOT_PASSWORD" Default="" Description="DB Password" Type="Variable" Display="always" Required="false" Mask="false"/>
</Container>
