<?xml version="1.0"?>
<Container version="2">
  <Name>sw-website</Name>
  <Repository>hintab/sw-website</Repository>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>9211</HostPort>
        <ContainerPort>80</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Database>
    <Name>MariaDB</Name>
    <Image>mariadb</Image>
    <Networking>
      <Mode>bridge</Mode>
      <Publish>
        <HostPort>3306</HostPort>
        <ContainerPort>3306</ContainerPort>
      </Publish>
    </Networking>
    <Environment>
      <Variable>
        <Name>MYSQL_ROOT_PASSWORD</Name>
        <Value>your_root_password</Value>
      </Variable>
    </Environment>
  </Database>
  <ExtraParams></ExtraParams>
  <Config Name="Port" Target="HostPort" Default="9211" Description="The port on which the website should run." Type="Port" Display="always" Required="true" Mask="false"/>
  <Config Name="Database Connection" Target="ContainerPort" Default="3306" Description="The port for the database connection." Type="Port" Display="always" Required="true" Mask="false"/>
</Container>
