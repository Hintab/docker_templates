<Container version="2">
  <Name>test-container</Name>
  <Repository>your-dockerhub-username/test-container</Repository>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>$HOST_PORT$</HostPort>
        <ContainerPort>80</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Config>
    <Variable>
      <Name>ENV_VARIABLE</Name>
      <Value>$YOUR_VALUE$</Value>
    </Variable>
  </Config>
</Container>
